class Solution {
    public int[] twoSum(int[] nums, int target) {
        HashMap<Integer, Integer> hm = new HashMap<Integer, Integer>();
        int[] ans = new int[2];

        for(int i = 0; i < nums.length; i++){
            int num = nums[i];
            if(hm.containsKey(target - num)) {
                ans = new int[]{i, hm.get(target - num)};
            }
            hm.put(num, i);
        }
        return ans;
    }
}