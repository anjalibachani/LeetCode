class Solution {
    public int balancedStringSplit(String s) {
        int balance = 0;
        int count = 0;
        char[] c = s.toCharArray();
        for(char a : c) {
            if(a == 'L') {
                balance++;
            }
            else if(a == 'R') {
                balance--;
            }
            if(balance == 0) {
                count++;
            }
        }
        return count;
    }
}